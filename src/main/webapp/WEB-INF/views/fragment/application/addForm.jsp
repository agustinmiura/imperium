<form class="form-horizontal">
    <div class="control-group">
        <label
            class="control-label"
            for="name">Name</label>
        <div class="controls">
            <input
                type="text"
                id="name"
                name="name"
                placeholder="Enter application name here">
            </input>
        </div>
    </div>
    <div class="control-group">
        <label
            class="control-label"
            for="description">Description</label>
        <div class="controls">
            <input
                type="text"
                id="description"
                name="description"
                placeholder="Enter description here">
            </input>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <button
                id="submit"
                type="submit"
                class="btn">Submit</button>
            <button
                id="cancelButton"
                type="reset"
                class="btn">Cancel</button>
        </div>
    </div>
</form>